<% include ./partials/header.ejs %>

<div
  class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1574169208507-84376144848b?q=80&w=1479&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center"
>
  <div class="w-[30vw] bg-white px-20 py-10 rounded-[30px]">
    <h1
      class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none"
    >
      Welcome to pinterest
    </h1>
    <form action="/login" method="post">
      <input
        class="border-2 rounded block mt-2 w-full px-3 py-2"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="border-2 rounded block mt-2 w-full px-3 py-2"
        type="password"
        name="password"
        placeholder="password"
      />

      <a class="mt-2 font-semibold text-zinc-600 inline-block" href="#"
        >Forgotten your password ?</a
      >
      <input
        class="border-2 rounded-full block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full"
        type="submit"
        value="Login"
      />
      <p
        class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center"
      >
        By continuing, you agree to pinterest's Terms of Service Acknowledge
        that you've read our Privacy Policy notice at collection
      </p>
    </form>
    <a
      class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full"
      href="/register"
      >Don't have an account?</a
    >
  </div>
</div>

